<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="using:BugFablesSaveEditor.ViewModels"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:m="clr-namespace:BugFablesSaveEditor.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:CrystalBerriesViewModel"
             x:CompileBindings="True"
             x:Class="BugFablesSaveEditor.Views.CrystalBerriesView">
  <Design.DataContext>
    <vm:CrystalBerriesViewModel />
  </Design.DataContext>

  <DockPanel>
    <DockPanel DockPanel.Dock="Top">
      <Label DockPanel.Dock="Left" VerticalContentAlignment="Center" Content="Text filter " />
      <Button DockPanel.Dock="Right" Margin="5" Content="Toggle All Shown"
              Command="{Binding ToggleAllShownCommand}" />
      <TextBox VerticalContentAlignment="Center" Margin="5" Text="{Binding TextFilter}" />
    </DockPanel>
    <DataGrid Items="{Binding CrystalBerries}" SelectionMode="Extended">
      <DataGrid.Columns>
        <DataGridTextColumn Header="Index" IsReadOnly="True"
                            x:DataType="m:FlagSaveDataModel"
                            Binding="{Binding Index}" />
        <DataGridTemplateColumn Header="Obtained" Width="100">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate DataType="m:FlagSaveDataModel">
              <CheckBox Margin="30,0,0,0" IsChecked="{Binding Enabled}" />
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
        <DataGridTextColumn Header="Area" IsReadOnly="True"
                            x:DataType="m:FlagSaveDataModel"
                            Binding="{Binding Description1}" />
        <DataGridTextColumn Header="Location" IsReadOnly="True"
                            x:DataType="m:FlagSaveDataModel"
                            Binding="{Binding Description2}" />
      </DataGrid.Columns>
    </DataGrid>
  </DockPanel>
</UserControl>
