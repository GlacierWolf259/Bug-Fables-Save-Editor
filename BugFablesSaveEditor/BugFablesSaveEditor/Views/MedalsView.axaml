<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="using:BugFablesSaveEditor.ViewModels"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ob="clr-namespace:BugFablesSaveEditor.Models"
             xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
             xmlns:ic="clr-namespace:Projektanker.Icons.Avalonia;assembly=Projektanker.Icons.Avalonia"
             xmlns:idd="clr-namespace:Avalonia.Xaml.Interactions.DragAndDrop;assembly=Avalonia.Xaml.Interactions.DragAndDrop"
             xmlns:v="clr-namespace:BugFablesSaveEditor.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:MedalsViewModel"
             x:CompileBindings="True"
             x:Class="BugFablesSaveEditor.Views.MedalsView">
  <Design.DataContext>
    <vm:MedalsViewModel />
  </Design.DataContext>

  <TabControl>
    <TabItem Header="On hand">
      <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Vertical" Margin="0,10,0,5">
          <DockPanel HorizontalAlignment="Stretch" DockPanel.Dock="Bottom">
            <Button Content="Add" DockPanel.Dock="Right"
                    Command="{Binding MedalOnHandSaveData.AddViewModelCommand}"
                    CommandParameter="{Binding MedalOnHandSaveData.NewViewModel}" />
            <Grid ColumnDefinitions="*,*">
              <ContentControl Grid.Column="0"
                              Content="{Binding MedalOnHandSaveData.NewViewModel.Medal}" />
              <ComboBox Grid.Column="1"
                        SelectedIndex="{Binding MedalOnHandSaveData.NewViewModel.MedalEquipTarget}"
                        Items="{Binding MedalOnHandSaveData.NewViewModel.MedalEquipTargets}" />
            </Grid>
          </DockPanel>
          <Button HorizontalAlignment="Center" Content="Unequip all medals"
                  Command="{Binding UnequipAllMedalsCommand}" />
        </StackPanel>
        <DataGrid Classes="draggable" Items="{Binding MedalOnHandSaveData.Collection}">
          <i:Interaction.Behaviors>
            <i:BehaviorCollection>
              <idd:ContextDropBehavior Handler="{StaticResource DataGridDndMedalOnHandSaveData}" />
            </i:BehaviorCollection>
          </i:Interaction.Behaviors>
          <DataGrid.Columns>
            <DataGridTemplateColumn Width="62">
              <DataGridTemplateColumn.Header>
                <ic:Icon FontSize="22" Value="mdi-swap-vertical" />
              </DataGridTemplateColumn.Header>
              <DataGridTemplateColumn.CellTemplate>
                <DataTemplate>
                  <ic:Icon FontSize="25" Value="mdi-drag" />
                </DataTemplate>
              </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
            <DataGridTemplateColumn Header="Medal">
              <DataGridTemplateColumn.CellTemplate>
                <DataTemplate DataType="ob:MedalOnHandSaveDataModel">
                  <ContentControl Content="{Binding Medal}" />
                </DataTemplate>
              </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
            <DataGridTemplateColumn Header="Equip">
              <DataGridTemplateColumn.CellTemplate>
                <DataTemplate DataType="ob:MedalOnHandSaveDataModel">
                  <ComboBox SelectedIndex="{Binding MedalEquipTarget}"
                            Items="{Binding MedalEquipTargets}" />
                </DataTemplate>
              </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
            <DataGridTemplateColumn Width="35">
              <DataGridTemplateColumn.CellTemplate>
                <DataTemplate DataType="ob:MedalOnHandSaveDataModel">
                  <Button Content="-"
                          Command="{Binding $parent[DataGrid].((vm:MedalsViewModel)DataContext).MedalOnHandSaveData.RemoveViewModelCommand}"
                          CommandParameter="{Binding }"
                          Width="25" Background="DarkRed" />
                </DataTemplate>
              </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
          </DataGrid.Columns>
        </DataGrid>
      </DockPanel>
    </TabItem>
    <TabItem Header="Shop pools">
      <Grid ColumnDefinitions="*,*">
        <DockPanel Grid.Column="0">
          <v:BfNamedIdCollectionView TitleLabel="Merab"
                                     NamedIdsCollection="{Binding MerabShopPool.Collection}"
                                     AddCommand="{Binding MerabShopPool.AddViewModelCommand}"
                                     NewNamedId="{Binding MerabShopPool.NewViewModel}"
                                     DeleteCommand="{Binding MerabShopPool.RemoveViewModelCommand}" />
        </DockPanel>
        <DockPanel Margin="20,0,0,0" Grid.Column="1">
          <v:BfNamedIdCollectionView TitleLabel="Shades"
                                     NamedIdsCollection="{Binding ShadesShopPool.Collection}"
                                     AddCommand="{Binding ShadesShopPool.AddViewModelCommand}"
                                     NewNamedId="{Binding ShadesShopPool.NewViewModel}"
                                     DeleteCommand="{Binding ShadesShopPool.RemoveViewModelCommand}" />
        </DockPanel>
      </Grid>
    </TabItem>
    <TabItem Header="Shop available">
      <Grid ColumnDefinitions="50*,50*">
        <DockPanel Grid.Column="0">
          <v:BfNamedIdCollectionView TitleLabel="Merab"
                                     NamedIdsCollection="{Binding MerabShopAvailables.Collection}"
                                     AddCommand="{Binding MerabShopAvailables.AddViewModelCommand}"
                                     NewNamedId="{Binding MerabShopAvailables.NewViewModel}"
                                     DeleteCommand="{Binding MerabShopAvailables.RemoveViewModelCommand}" />
        </DockPanel>
        <DockPanel Margin="20,0,0,0" Grid.Column="1">
          <v:BfNamedIdCollectionView TitleLabel="Shades"
                                     NamedIdsCollection="{Binding ShadesShopAvailables.Collection}"
                                     AddCommand="{Binding ShadesShopAvailables.AddViewModelCommand}"
                                     NewNamedId="{Binding ShadesShopAvailables.NewViewModel}"
                                     DeleteCommand="{Binding ShadesShopAvailables.RemoveViewModelCommand}" />
        </DockPanel>
      </Grid>
    </TabItem>
  </TabControl>
</UserControl>
