<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="using:BugFablesSaveEditor.ViewModels"
             xmlns:ob="clr-namespace:BugFablesSaveEditor.ObservableModels"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:StatsViewModel"
             x:CompileBindings="True"
             x:Class="BugFablesSaveEditor.Views.StatsView">
  <Design.DataContext>
    <vm:StatsViewModel />
  </Design.DataContext>

  <DockPanel HorizontalAlignment="Center">
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
      <DockPanel>
        <Label DockPanel.Dock="Top" Content="Party base stats" />
        <StackPanel VerticalAlignment="Center" Orientation="Vertical">
          <StackPanel Orientation="Horizontal">
            <Label VerticalContentAlignment="Center" Content="TP" Width="30" />
            <NumericUpDown ShowButtonSpinner="False"
                           Value="{Binding GlobalSaveData.Tp.Value}" />
            <Label VerticalContentAlignment="Center" Content="/" />
            <NumericUpDown ShowButtonSpinner="False"
                           Value="{Binding GlobalSaveData.MaxTp.Value}" />
          </StackPanel>
          <StackPanel Orientation="Horizontal">
            <Label VerticalContentAlignment="Center" Content="MP" Width="30" />
            <NumericUpDown ShowButtonSpinner="False"
                           Value="{Binding GlobalSaveData.Mp.Value}" />
            <Label VerticalContentAlignment="Center" Content="/" />
            <NumericUpDown ShowButtonSpinner="False"
                           Value="{Binding GlobalSaveData.MaxMp.Value}" />
          </StackPanel>
        </StackPanel>
      </DockPanel>
      <StackPanel Margin="10,0,0,0" Orientation="Vertical">
        <Label DockPanel.Dock="Top" Content="Party members stats" />
        <DataGrid AutoGenerateColumns="False" CanUserResizeColumns="True" Height="130"
                  Items="{Binding PartyMembers}" SelectionMode="Single"
                  SelectedItem="{Binding SelectedPartyMember}">
          <DataGrid.Columns>
            <DataGridTemplateColumn Header="AnimId" IsReadOnly="True">
              <DataGridTemplateColumn.CellTemplate>
                <DataTemplate DataType="ob:ObservablePartyMemberSaveData">
                  <Label VerticalAlignment="Center" Content="{Binding AnimId.Name}"/>
                </DataTemplate>
              </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
            <DataGridTextColumn x:DataType="ob:ObservablePartyMemberSaveData"
                                Header="Base HP" Binding="{Binding BaseHp.Value}" Width="75" />
            <DataGridTextColumn x:DataType="ob:ObservablePartyMemberSaveData"
                                Header="HP" Binding="{Binding Hp.Value}" />
            <DataGridTextColumn x:DataType="ob:ObservablePartyMemberSaveData"
                                Header="Max HP" Binding="{Binding MaxHp.Value}" Width="70" />
            <DataGridTextColumn x:DataType="ob:ObservablePartyMemberSaveData"
                                Header="Base Attack" Binding="{Binding BaseAttack.Value}"
                                Width="85" />
            <DataGridTextColumn x:DataType="ob:ObservablePartyMemberSaveData"
                                Header="Attack" Binding="{Binding Attack.Value}" />
            <DataGridTextColumn x:DataType="ob:ObservablePartyMemberSaveData"
                                Header="Base Defense" Binding="{Binding BaseDefense.Value}"
                                Width="95" />
            <DataGridTextColumn x:DataType="ob:ObservablePartyMemberSaveData"
                                Header="Defense" Binding="{Binding Defense.Value}" />
          </DataGrid.Columns>
        </DataGrid>
      </StackPanel>
    </StackPanel>
    <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
      <DockPanel>
        <Label DockPanel.Dock="Top" Content="Party stats bonuses" />
        <StackPanel Margin="10" DockPanel.Dock="Bottom" Orientation="Horizontal">
          <ComboBox SelectedIndex="{Binding NewPartyStatBonus.Type.Value}"
                    Items="{Binding PartyStatBonusTypeNames}" Width="100" />
          <NumericUpDown ShowButtonSpinner="False"
                         Value="{Binding NewPartyStatBonus.Amount.Value}" />
          <Button Command="{Binding AddStatPartyBonusCommand}"
                  CommandParameter="{Binding NewPartyStatBonus}"
                  VerticalContentAlignment="Center"
                  Content="Add" />
        </StackPanel>
        <DataGrid AutoGenerateColumns="False" CanUserResizeColumns="True" SelectionMode="Single"
                  Items="{Binding PartyStatBonuses}" CanUserSortColumns="True">
          <DataGrid.Columns>
            <DataGridTextColumn Header="Type"
                                x:DataType="ob:ObservableStatsBonusSaveData"
                                Binding="{Binding TypeName}"
                                IsReadOnly="True" Width="85" />
            <DataGridTextColumn Header="Amount"
                                x:DataType="ob:ObservableStatsBonusSaveData"
                                Binding="{Binding Amount.Value}"
                                IsReadOnly="True" />
            <DataGridTemplateColumn Width="35">
              <DataGridTemplateColumn.CellTemplate>
                <DataTemplate DataType="ob:ObservableStatsBonusSaveData">
                  <Button Margin="5,0,0,0" Content="-"
                          Command="{ReflectionBinding $parent[DataGrid].DataContext.DeleteStatBonusCommand}"
                          CommandParameter="{Binding }"
                          HorizontalContentAlignment="Center"
                          Width="25"
                          Background="DarkRed" />
                </DataTemplate>
              </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
          </DataGrid.Columns>
        </DataGrid>
      </DockPanel>
      <StackPanel Margin="5,0,0,0" HorizontalAlignment="Center" Orientation="Vertical">
        <Label Content="Total party bonuses" />
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
          <Label VerticalContentAlignment="Center" FontWeight="Bold" Content="Max TP" />
          <Label VerticalContentAlignment="Center" FontWeight="Bold"
                 Content="{Binding TotalPartyMaxTpBonus}" />
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
          <Label VerticalContentAlignment="Center" FontWeight="Bold" Content="Max MP" />
          <Label VerticalContentAlignment="Center" FontWeight="Bold"
                 Content="{Binding TotalPartyMaxMpBonus}" />
        </StackPanel>
      </StackPanel>
      <DockPanel Margin="10,0,0,0">
        <Label DockPanel.Dock="Top" Content="Selected member stats bonuses" />
        <StackPanel Margin="10" DockPanel.Dock="Bottom" Orientation="Horizontal">
          <ComboBox SelectedIndex="{Binding NewMemberStatBonus.Type.Value}"
                    Items="{Binding MemberStatBonusTypeNames}" Width="100" />
          <NumericUpDown ShowButtonSpinner="False"
                         Value="{Binding NewMemberStatBonus.Amount.Value}" />
          <Button Command="{Binding AddStatPartyMemberBonusCommand}"
                  CommandParameter="{Binding NewMemberStatBonus}"
                  VerticalContentAlignment="Center"
                  Content="Add" />
        </StackPanel>
        <DataGrid AutoGenerateColumns="False" CanUserResizeColumns="True"
                  Items="{Binding MemberStatBonuses}">
          <DataGrid.Columns>
            <DataGridTextColumn Header="Type"
                                x:DataType="ob:ObservableStatsBonusSaveData"
                                Binding="{Binding TypeName}"
                                IsReadOnly="True" Width="85" />
            <DataGridTextColumn Header="Amount"
                                x:DataType="ob:ObservableStatsBonusSaveData"
                                Binding="{Binding Amount.Value}"
                                IsReadOnly="True" />
            <DataGridTemplateColumn Width="35">
              <DataGridTemplateColumn.CellTemplate>
                <DataTemplate DataType="ob:ObservableStatsBonusSaveData">
                  <Button Margin="5,0,0,0" Content="-"
                          Command="{ReflectionBinding $parent[DataGrid].DataContext.DeleteStatBonusCommand}"
                          CommandParameter="{Binding }"
                          HorizontalContentAlignment="Center"
                          Width="25"
                          Background="DarkRed" />
                </DataTemplate>
              </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
          </DataGrid.Columns>
        </DataGrid>

      </DockPanel>
      <StackPanel Margin="5,0,0,0" HorizontalAlignment="Center" Orientation="Vertical">
        <Label Content="Total selected member bonuses" />
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
          <Label VerticalContentAlignment="Center" FontWeight="Bold" Content="Max HP" />
          <Label VerticalContentAlignment="Center" FontWeight="Bold"
                 Content="{Binding TotalMemberMaxHpBonus}" />
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
          <Label VerticalContentAlignment="Center" FontWeight="Bold" Content="Attack" />
          <Label VerticalContentAlignment="Center" FontWeight="Bold"
                 Content="{Binding TotalMemberAttackBonus}" />
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
          <Label VerticalContentAlignment="Center" FontWeight="Bold" Content="Defense" />
          <Label VerticalContentAlignment="Center" FontWeight="Bold"
                 Content="{Binding TotalMemberDefenseBonus}" />
        </StackPanel>
      </StackPanel>
    </StackPanel>
  </DockPanel>
</UserControl>
