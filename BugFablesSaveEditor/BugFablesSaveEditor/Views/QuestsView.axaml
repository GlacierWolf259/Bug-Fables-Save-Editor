<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="using:BugFablesSaveEditor.ViewModels"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:c="clr-namespace:BugFablesSaveEditor.Controls"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="450"
             x:DataType="vm:QuestsViewModel"
             x:CompileBindings="True"
             x:Class="BugFablesSaveEditor.Views.QuestsView">
  <Design.DataContext>
    <vm:QuestsViewModel />
  </Design.DataContext>

  <Grid ColumnDefinitions="50*,50*,50*">
    <DockPanel Grid.Column="0">
      <Label DockPanel.Dock="Top" Content="Open quests" />
      <StackPanel Margin="0,10,0,5" HorizontalAlignment="Center" DockPanel.Dock="Bottom"
                  Orientation="Horizontal">
        <ContentControl Content="{Binding QuestsSaveData.Opened.NewViewModel}" />
        <Button Margin="5,0,0,0" Content="Add"
                Command="{Binding QuestsSaveData.Opened.AddViewModelCommand}"
                CommandParameter="{Binding QuestsSaveData.Opened.NewViewModel}" />
      </StackPanel>
      <c:BfNamedIdDataGrid Items="{Binding QuestsSaveData.Opened.CollectionView}"
                           DeleteCommand="{Binding QuestsSaveData.Opened.RemoveViewModelCommand}" />
    </DockPanel>
    <DockPanel Grid.Column="1" Margin="20,0,0,0">
      <Label DockPanel.Dock="Top" Content="Taken quests" />
      <StackPanel Margin="0,10,0,5" HorizontalAlignment="Center" DockPanel.Dock="Bottom"
                  Orientation="Horizontal">
        <ContentControl Content="{Binding QuestsSaveData.Taken.NewViewModel}" />
        <Button Margin="5,0,0,0" Content="Add"
                Command="{Binding QuestsSaveData.Taken.AddViewModelCommand}"
                CommandParameter="{Binding QuestsSaveData.Taken.NewViewModel}" />
      </StackPanel>
      <c:BfNamedIdDataGrid Items="{Binding QuestsSaveData.Taken.CollectionView}"
                           DeleteCommand="{Binding QuestsSaveData.Taken.RemoveViewModelCommand}" />
    </DockPanel>
    <DockPanel Grid.Column="2" Margin="20,0,0,0">
      <Label DockPanel.Dock="Top" Content="Completed quests" />
      <StackPanel Margin="0,10,0,5" HorizontalAlignment="Center" DockPanel.Dock="Bottom"
                  Orientation="Horizontal">
        <ContentControl Content="{Binding QuestsSaveData.Completed.NewViewModel}" />
        <Button Margin="5,0,0,0" Content="Add"
                Command="{Binding QuestsSaveData.Completed.AddViewModelCommand}"
                CommandParameter="{Binding QuestsSaveData.Completed.NewViewModel}" />
      </StackPanel>
      <c:BfNamedIdDataGrid Items="{Binding QuestsSaveData.Completed.CollectionView}"
                           DeleteCommand="{Binding QuestsSaveData.Completed.RemoveViewModelCommand}" />
    </DockPanel>
  </Grid>
</UserControl>
