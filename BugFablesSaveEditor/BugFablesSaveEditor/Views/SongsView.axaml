<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="using:BugFablesSaveEditor.ViewModels"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ob="clr-namespace:BugFablesSaveEditor.ObservableModels"
             xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
             xmlns:ic="clr-namespace:Projektanker.Icons.Avalonia;assembly=Projektanker.Icons.Avalonia"
             xmlns:idd="clr-namespace:Avalonia.Xaml.Interactions.DragAndDrop;assembly=Avalonia.Xaml.Interactions.DragAndDrop"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:SongsViewModel"
             x:CompileBindings="True"
             x:Class="BugFablesSaveEditor.Views.SongsView">
  <Design.DataContext>
    <vm:SongsViewModel />
  </Design.DataContext>
  <DockPanel Width="505">
    <StackPanel Margin="0,10,0,5" HorizontalAlignment="Center" DockPanel.Dock="Bottom"
                Orientation="Horizontal">
      <ContentControl Content="{Binding NewMusic.Music}" />
      <CheckBox Margin="5,0,0,0" Content="Is bought" IsChecked="{Binding NewMusic.Bought.Value}" />
      <Button Margin="5,0,0,0" Content="Add"
              Command="{Binding AddMusicCommand}"
              CommandParameter="{Binding NewMusic}" />
    </StackPanel>
    <DataGrid Classes="draggable"
              AutoGenerateColumns="False"
              CanUserSortColumns="False"
              CanUserReorderColumns="False"
              Items="{Binding MusicSaveData}">
      <i:Interaction.Behaviors>
        <i:BehaviorCollection>
          <idd:ContextDropBehavior Handler="{StaticResource DataGridDndMusicSaveData}" />
        </i:BehaviorCollection>
      </i:Interaction.Behaviors>
      <DataGrid.Columns>
        <DataGridTemplateColumn Width="62">
          <DataGridTemplateColumn.Header>
            <ic:Icon FontSize="22" Value="mdi-swap-vertical" />
          </DataGridTemplateColumn.Header>
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate>
              <ic:Icon FontSize="25" Value="mdi-drag" />
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
        <DataGridTemplateColumn Header="AnimId">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate DataType="ob:ObservableMusicSaveData">
              <ContentControl Content="{Binding Music}" />
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
        <DataGridTemplateColumn Header="AnimId">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate DataType="ob:ObservableMusicSaveData">
              <CheckBox IsChecked="{Binding Bought.Value}" />
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
        <DataGridTemplateColumn Width="35">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate DataType="ob:ObservableMusicSaveData">
              <Button Margin="5,0,0,0" Content="-"
                      Command="{Binding $parent[DataGrid].((vm:SongsViewModel)DataContext).DeleteMusicCommand}"
                      CommandParameter="{Binding }"
                      HorizontalContentAlignment="Center"
                      Width="25" Background="DarkRed" />
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
      </DataGrid.Columns>
    </DataGrid>
  </DockPanel>
</UserControl>
