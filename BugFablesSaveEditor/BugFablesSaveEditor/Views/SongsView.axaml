<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="using:BugFablesSaveEditor.ViewModels"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:v="clr-namespace:BugFablesSaveEditor.Views"
             xmlns:ob="clr-namespace:BugFablesSaveEditor.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:SongsViewModel"
             x:CompileBindings="True"
             x:Class="BugFablesSaveEditor.Views.SongsView">
  <Design.DataContext>
    <vm:SongsViewModel />
  </Design.DataContext>

  <DockPanel MaxWidth="550">
    <v:EditableModelCollectionView DndDropHandler="{StaticResource DataGridDndMusicSaveData}"
                                   Collection="{Binding MusicSaveData.Collection}"
                                   AddCommand="{Binding MusicSaveData.AddViewModelCommand}"
                                   NewModel="{Binding MusicSaveData.NewViewModel}"
                                   DeleteCommand="{Binding MusicSaveData.RemoveViewModelCommand}">
      <v:EditableModelCollectionView.Columns>
        <DataGridTemplateColumn Header="Name" Width="*">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate DataType="ob:MusicSaveDataModel">
              <ContentControl Content="{Binding Music}" />
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
        <DataGridTemplateColumn Header="Bought?">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate DataType="ob:MusicSaveDataModel">
              <CheckBox IsChecked="{Binding Bought}" />
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
      </v:EditableModelCollectionView.Columns>

      <v:EditableModelCollectionView.AddView>
        <DockPanel>
          <CheckBox DockPanel.Dock="Right" Content="Is bought"
                    IsChecked="{Binding MusicSaveData.NewViewModel.Bought}" />
          <ContentControl Content="{Binding MusicSaveData.NewViewModel.Music}" />
        </DockPanel>
      </v:EditableModelCollectionView.AddView>
    </v:EditableModelCollectionView>
  </DockPanel>
</UserControl>
