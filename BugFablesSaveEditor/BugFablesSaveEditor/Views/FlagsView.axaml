<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BugFablesSaveEditor.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:m="clr-namespace:BugFablesSaveEditor.Models"
             xmlns:v="clr-namespace:BugFablesSaveEditor.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:FlagsViewModel"
             x:CompileBindings="True"
             x:Class="BugFablesSaveEditor.Views.FlagsView">
  <Design.DataContext>
    <vm:FlagsViewModel />
  </Design.DataContext>

  <UserControl.Styles>
    <Style Selector="TabItem > DockPanel">
      <Setter Property="MaxWidth" Value="1000" />
    </Style>
  </UserControl.Styles>

  <TabControl>
    <TabItem Header="Flags">
      <v:FlagsCollectionView TextFilter="{Binding TextFilterFlags}" Collection="{Binding Flags}">
        <v:FlagsCollectionView.ValueCellTemplate>
          <DataTemplate DataType="m:FlagSaveDataModel">
            <CheckBox IsChecked="{Binding Enabled}" />
          </DataTemplate>
        </v:FlagsCollectionView.ValueCellTemplate>
      </v:FlagsCollectionView>
    </TabItem>
    <TabItem Header="Flagvars">
      <v:FlagsCollectionView TextFilter="{Binding TextFilterFlagvars}" Collection="{Binding Flagvars}">
        <v:FlagsCollectionView.ValueCellTemplate>
          <DataTemplate DataType="m:FlagvarSaveDataModel">
            <TextBox Text="{Binding Var}" />
          </DataTemplate>
        </v:FlagsCollectionView.ValueCellTemplate>
      </v:FlagsCollectionView>
    </TabItem>
    <TabItem Header="Flagstrings">
      <v:FlagsCollectionView TextFilter="{Binding TextFilterFlagstrings}" Collection="{Binding Flagstrings}">
        <v:FlagsCollectionView.ValueCellTemplate>
          <DataTemplate DataType="m:FlagstringSaveDataModel">
            <TextBox Text="{Binding Str}" />
          </DataTemplate>
        </v:FlagsCollectionView.ValueCellTemplate>
      </v:FlagsCollectionView>
    </TabItem>
    <TabItem Header="Regionals">
      <v:FlagsCollectionView TextFilter="{Binding TextFilterRegionalFlags}" Collection="{Binding RegionalFlags}"
                       FilterUnused="{Binding FilterUnusedRegionals}">
        <v:FlagsCollectionView.ValueCellTemplate>
          <DataTemplate DataType="m:FlagSaveDataModel">
            <CheckBox IsChecked="{Binding Enabled}" />
          </DataTemplate>
        </v:FlagsCollectionView.ValueCellTemplate>
      </v:FlagsCollectionView>
    </TabItem>
  </TabControl>
</UserControl>
