<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="using:BugFablesSaveEditor.ViewModels"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:bf="clr-namespace:BugFablesSaveEditor.Enums"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="550"
             x:DataType="vm:GlobalViewModel"
             x:CompileBindings="True"
             x:Class="BugFablesSaveEditor.Views.GlobalView">
  <Design.DataContext>
    <vm:GlobalViewModel />
  </Design.DataContext>

  <StackPanel HorizontalAlignment="Center" Margin="10" VerticalAlignment="Top"
              Orientation="Vertical">
    <StackPanel Orientation="Horizontal">
      <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
          <StackPanel Orientation="Vertical">
            <Label Content="Position in map" />
            <StackPanel Orientation="Horizontal">
              <Label VerticalContentAlignment="Center" Content="X" />
              <NumericUpDown Value="{Binding SaveData.Header.PositionX}"
                             ParsingNumberStyle="Float"
                             Width="125" AllowSpin="True" Increment="1" ShowButtonSpinner="False" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
              <Label VerticalContentAlignment="Center" Content="Y" />
              <NumericUpDown Value="{Binding SaveData.Header.PositionY}"
                             ParsingNumberStyle="Float"
                             Width="125" AllowSpin="True" Increment="1" ShowButtonSpinner="False" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
              <Label VerticalContentAlignment="Center" Content="Z" />
              <NumericUpDown Value="{Binding SaveData.Header.PositionZ}"
                             ParsingNumberStyle="Float"
                             Width="125" AllowSpin="True" Increment="1" ShowButtonSpinner="False" />
            </StackPanel>
          </StackPanel>
          <StackPanel Margin="10,0,0,0" Orientation="Vertical">
            <Label Content="Location" />
            <StackPanel Orientation="Horizontal">
              <Label VerticalContentAlignment="Center" Content="Current area" />
              <ComboBox
                SelectedIndex="{Binding SaveData.Global.CurrentArea,
                               Converter={StaticResource EnumConverter},
                               ConverterParameter={x:Type bf:Area}}"
                Items="{Binding Areas}" Width="200" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
              <Label VerticalContentAlignment="Center" Content="Current map" />
              <ComboBox
                SelectedIndex="{Binding SaveData.Global.CurrentMap,
                               Converter={StaticResource EnumConverter},
                               ConverterParameter={x:Type bf:Map}}"
                Items="{Binding Maps}" Width="200" />
            </StackPanel>
          </StackPanel>
        </StackPanel>
        <StackPanel Margin="0,0,0,0" Orientation="Horizontal">
          <StackPanel Orientation="Vertical">
            <Label Margin="0,10,0,0" VerticalContentAlignment="Center" Content="Play time" />
            <StackPanel Orientation="Horizontal">
              <NumericUpDown Value="{Binding SaveData.Global.PlayTimeHours}"
                             Increment="1"
                             ParsingNumberStyle="Integer" ShowButtonSpinner="False" />
              <Label Margin="5,0,0,0" VerticalContentAlignment="Center" Content=":" />
              <NumericUpDown Value="{Binding SaveData.Global.PlayTimeMinutes}"
                             Increment="1"
                             ParsingNumberStyle="Integer" ShowButtonSpinner="False" />
              <Label Margin="5,0,0,0" VerticalContentAlignment="Center" Content=":" />
              <NumericUpDown Value="{Binding SaveData.Global.PlayTimeSeconds}"
                             Increment="1"
                             ParsingNumberStyle="Integer" ShowButtonSpinner="False" />
            </StackPanel>
          </StackPanel>
          <StackPanel Margin="40,10,10,10" Orientation="Vertical">
            <Label VerticalContentAlignment="Center" Content="Berry count" />
            <NumericUpDown Width="150" Value="{Binding SaveData.Global.BerryCount}"
                           Increment="1"
                           ParsingNumberStyle="Integer" />
          </StackPanel>
        </StackPanel>
      </StackPanel>
      <StackPanel Margin="75,0,0,0" Orientation="Vertical">
        <Label Content="Information on the file select screen" />
        <StackPanel Orientation="Horizontal">
          <Label VerticalContentAlignment="Center" Content="Filename" />
          <TextBox Text="{Binding SaveData.Header.Filename}" Width="270" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
          <Label Content="Code icons" Margin="0,5,0,0" />
          <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
              <CheckBox IsChecked="{Binding SaveData.Header.IsRuigee}"
                        Content="RUIGEE" />
              <CheckBox IsChecked="{Binding SaveData.Header.IsHardest}"
                        Content="HARDEST" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
              <CheckBox IsChecked="{Binding SaveData.Header.IsFrameone}"
                        Content="FRAMEONE" />
              <CheckBox IsChecked="{Binding SaveData.Header.IsMorefarm}"
                        Content="MOREFARM" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
              <CheckBox IsChecked="{Binding SaveData.Header.IsMystery}"
                        Content="MYSTERY?" />
              <CheckBox IsChecked="{Binding SaveData.Header.IsPushrock}"
                        Content="PUSHROCK" />
            </StackPanel>
          </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
          <Label VerticalContentAlignment="Center" Content="Rightmost progress icon" />
          <ComboBox
            SelectedIndex="{Binding SaveData.Global.SaveProgressIcons,
                               Converter={StaticResource EnumConverter},
                               ConverterParameter={x:Type bf:SaveProgressIcon}}"
            Items="{Binding SaveProgressIcons}" Width="170" />
        </StackPanel>
      </StackPanel>
    </StackPanel>
    <StackPanel Margin="0,30,0,0" Orientation="Horizontal">
      <StackPanel Orientation="Vertical">
        <Label Content="Rank progress" />
        <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
          <Label VerticalContentAlignment="Center" Content="Rank" />
          <NumericUpDown Value="{Binding SaveData.Global.Rank}"
                         ShowButtonSpinner="False" Increment="1"
                         ParsingNumberStyle="Integer" />
          <Label Margin="10,0,0,0" VerticalContentAlignment="Center" Content="Exploration points" />
          <NumericUpDown Value="{Binding SaveData.Global.Exp}"
                         ShowButtonSpinner="False" Increment="1"
                         ParsingNumberStyle="Integer" />
          <Label VerticalContentAlignment="Center" Content="/" />
          <NumericUpDown Value="{Binding SaveData.Global.NeededExp}"
                         ShowButtonSpinner="False"
                         Increment="1" ParsingNumberStyle="Integer" />
        </StackPanel>
      </StackPanel>
      <StackPanel Margin="135,0,0,0" Orientation="Vertical">
        <Label Content="Max amount of items" />
        <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
          <Label VerticalContentAlignment="Center" Content="Inventory" />
          <NumericUpDown Value="{Binding SaveData.Global.NbrMaxItemsInventory}"
                         Increment="1"
                         ParsingNumberStyle="Integer" />
          <Label Margin="10,0,0,0" VerticalContentAlignment="Center" Content="Storage" />
          <NumericUpDown Value="{Binding SaveData.Global.NbrMaxItemsStorage}"
                         Increment="1"
                         ParsingNumberStyle="Integer" />
        </StackPanel>
      </StackPanel>
    </StackPanel>
  </StackPanel>
</UserControl>
