<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="using:BugFablesSaveEditor.ViewModels"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:bf="clr-namespace:BugFablesSaveEditor.Utils"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="450"
             x:Class="BugFablesSaveEditor.Views.QuestsView">
  <Design.DataContext>
    <vm:QuestsViewModel />
  </Design.DataContext>

  <Grid ColumnDefinitions="50*,50*,50*">
    <DockPanel Grid.Column="0">
      <Label DockPanel.Dock="Top" Content="Open quests" />
      <StackPanel Margin="0,10,0,5" HorizontalAlignment="Center" DockPanel.Dock="Bottom" Orientation="Horizontal">
        <ComboBox
          SelectedIndex="{Binding SelectedOpenQuestForAdd,
                                  Converter={StaticResource EnumConverter},
                                  ConverterParameter={x:Type bf:Quest}}"
          Items="{Binding QuestsNames}" Width="250" />
        <Button Margin="5,0,0,0" Content="Add" Command="{Binding AddOpenQuestCommand}" />
      </StackPanel>
      <StackPanel VerticalAlignment="Center" DockPanel.Dock="Left" Orientation="Vertical">
        <Button Content="↑" Command="{Binding CmdReorderOpenQuestUpCommand}" />
        <Button Content="↓" Command="{Binding CmdReorderOpenQuestDownCommand}" />
      </StackPanel>
      <DataGrid AutoGenerateColumns="False" HeadersVisibility="None"
                Items="{Binding OpenQuests}" IsReadOnly="True"
                SelectedItem="{Binding SelectedOpenQuest, Mode=TwoWay}">
        <DataGrid.Columns>
          <DataGridTextColumn
            Binding="{Binding Quest, Mode=OneWay,
                                        Converter={StaticResource EnumDescriptionConverter},
                                        ConverterParameter={x:Type bf:Quest}}"
            Width="245" />
          <DataGridTemplateColumn Width="50">
            <DataGridTemplateColumn.CellTemplate>
              <DataTemplate>
                <Button Margin="5,0,0,0" Content="-" Background="DarkRed"
                        Command="{Binding $parent[DataGrid].DataContext.RemoveOpenQuestCommand}"
                        CommandParameter="{Binding }" HorizontalContentAlignment="Center" Width="25" />
              </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
          </DataGridTemplateColumn>
        </DataGrid.Columns>
      </DataGrid>
    </DockPanel>
    <DockPanel Grid.Column="1" Margin="20,0,0,0">
      <Label DockPanel.Dock="Top" Content="Taken quests" />
      <StackPanel Margin="0,10,0,5" HorizontalAlignment="Center" DockPanel.Dock="Bottom" Orientation="Horizontal">
        <ComboBox
          SelectedIndex="{Binding SelectedTakenQuestForAdd,
                                  Converter={StaticResource EnumConverter},
                                  ConverterParameter={x:Type bf:Quest}}"
          Items="{Binding QuestsNames}" Width="250" />
        <Button Margin="5,0,0,0" Content="Add" Command="{Binding AddTakenQuestCommand}" />
      </StackPanel>
      <StackPanel VerticalAlignment="Center" DockPanel.Dock="Left" Orientation="Vertical">
        <Button Content="↑" Command="{Binding CmdReorderTakenQuestUpCommand}" />
        <Button Content="↓" Command="{Binding CmdReorderTakenQuestDownCommand}" />
      </StackPanel>
      <DataGrid AutoGenerateColumns="False" HeadersVisibility="None"
                Items="{Binding TakenQuests}" IsReadOnly="True"
                SelectedItem="{Binding SelectedTakenQuest, Mode=TwoWay}">
        <DataGrid.Columns>
          <DataGridTextColumn
            Binding="{Binding Quest, Mode=OneWay,
                                        Converter={StaticResource EnumDescriptionConverter},
                                        ConverterParameter={x:Type bf:Quest}}"
            Width="245" />
          <DataGridTemplateColumn Width="50">
            <DataGridTemplateColumn.CellTemplate>
              <DataTemplate>
                <Button Margin="5,0,0,0" Content="-" Background="DarkRed"
                        Command="{Binding $parent[DataGrid].DataContext.RemoveTakenQuestCommand}"
                        CommandParameter="{Binding }" HorizontalContentAlignment="Center" Width="25" />
              </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
          </DataGridTemplateColumn>
        </DataGrid.Columns>
      </DataGrid>
    </DockPanel>
    <DockPanel Grid.Column="2" Margin="20,0,0,0">
      <Label DockPanel.Dock="Top" Content="Completed quests" />
      <StackPanel Margin="0,10,0,5" HorizontalAlignment="Center" DockPanel.Dock="Bottom" Orientation="Horizontal">
        <ComboBox
          SelectedIndex="{Binding SelectedCompletedQuestForAdd,
                                  Converter={StaticResource EnumConverter},
                                  ConverterParameter={x:Type bf:Quest}}"
          Items="{Binding QuestsNames}" Width="250" />
        <Button Margin="5,0,0,0" Content="Add" Command="{Binding AddCompletedQuestCommand}" />
      </StackPanel>
      <StackPanel VerticalAlignment="Center" DockPanel.Dock="Left" Orientation="Vertical">
        <Button Content="↑" Command="{Binding CmdReorderCompletedQuestUpCommand}" />
        <Button Content="↓" Command="{Binding CmdReorderCompletedQuestDownCommand}" />
      </StackPanel>
      <DataGrid AutoGenerateColumns="False" HeadersVisibility="None"
                Items="{Binding CompletedQuests}" IsReadOnly="True"
                SelectedItem="{Binding SelectedCompletedQuest, Mode=TwoWay}">
        <DataGrid.Columns>
          <DataGridTextColumn
            Binding="{Binding Quest, Mode=OneWay,
                                        Converter={StaticResource EnumDescriptionConverter},
                                        ConverterParameter={x:Type bf:Quest}}"
            Width="245" />
          <DataGridTemplateColumn Width="50">
            <DataGridTemplateColumn.CellTemplate>
              <DataTemplate>
                <Button Margin="5,0,0,0" Content="-" Background="DarkRed"
                        Command="{Binding $parent[DataGrid].DataContext.RemoveCompletedQuestCommand}"
                        CommandParameter="{Binding }" HorizontalContentAlignment="Center" Width="25" />
              </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
          </DataGridTemplateColumn>
        </DataGrid.Columns>
      </DataGrid>
    </DockPanel>
  </Grid>
</UserControl>
